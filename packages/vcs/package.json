{
  "name": "@backlogmd/vcs",
  "version": "0.1.0",
  "description": "VCS abstraction for BacklogMD",
  "type": "module",
  "license": "MIT",
  "author": "BacklogMD",
  "repository": {
    "type": "git",
    "url": "https://github.com/backlogmd/backlogmd-utils.git",
    "directory": "packages/vcs"
  },
  "keywords": [
    "backlogmd",
    "vcs",
    "git",
    "version-control"
  ],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}
