{
  "name": "@backlogmd/writer",
  "version": "0.2.0",
  "description": "Surgical markdown writer for BacklogMD â€” virtual DOM for your backlog",
  "type": "module",
  "license": "MIT",
  "author": "BacklogMD",
  "repository": {
    "type": "git",
    "url": "https://github.com/backlogmd/backlogmd-utils.git",
    "directory": "packages/writer"
  },
  "keywords": [
    "backlogmd",
    "backlog",
    "markdown",
    "writer",
    "kanban",
    "project-management"
  ],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "dependencies": {
    "@backlogmd/types": "*",
    "@backlogmd/parser": "*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}
