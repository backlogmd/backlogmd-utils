{
  "name": "@backlogmd/serve",
  "version": "0.2.2",
  "description": "Development server for BacklogMD kanban board",
  "type": "module",
  "license": "MIT",
  "author": "BacklogMD",
  "repository": {
    "type": "git",
    "url": "https://github.com/backlogmd/backlogmd-utils.git",
    "directory": "packages/serve"
  },
  "keywords": [
    "backlogmd",
    "backlog",
    "kanban",
    "dev-server",
    "markdown",
    "project-management"
  ],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "backlogmd-serve": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "files": [
    "dist",
    "app/dist"
  ],
  "scripts": {
    "clean": "rm -rf dist app/dist",
    "build:app": "cd app && vite build",
    "build:app:watch": "cd app && vite build --watch",
    "build:server": "tsc",
    "build": "npm run build:app && npm run build:server",
    "prepublishOnly": "npm run clean && npm run build",
    "serve": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "dependencies": {
    "@backlogmd/core": "*",
    "@backlogmd/types": "*",
    "@backlogmd/vcs": "*",
    "@backlogmd/workers": "*",
    "@langchain/classic": "^1.0.0",
    "@langchain/core": "^1.1.0",
    "@langchain/openai": "^1.2.0",
    "dotenv": "^16.4.0",
    "langchain": "^1.2.0",
    "fastify": "^5.7.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^20.6.1",
    "prettier": "^3.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}