{
  "name": "@backlogmd/core",
  "version": "0.1.0",
  "description": "High-level API for BacklogMD with manifest as source of truth",
  "type": "module",
  "license": "MIT",
  "author": "BacklogMD",
  "repository": {
    "type": "git",
    "url": "https://github.com/backlogmd/backlogmd-utils.git",
    "directory": "packages/core"
  },
  "keywords": [
    "backlogmd",
    "backlog",
    "markdown",
    "core",
    "kanban",
    "project-management"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "dependencies": {
    "@backlogmd/parser": "*",
    "@backlogmd/types": "*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}
