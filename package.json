{
  "name": "backlogmd-parser",
  "private": true,
  "version": "0.1.0",
  "description": "CLI for BacklogMD parser",
  "type": "module",
  "bin": {
    "backlogmd-parser": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build -w @backlogmd/types && npm run build -w @backlogmd/parser && tsc",
    "cli": "npm run build && node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "serve": "npm run build -w @backlogmd/types && npm run build -w @backlogmd/parser && npm run build -w @backlogmd/serve && node packages/serve/dist/cli.js"
  },
  "workspaces": [
    "packages/types",
    "packages/parser",
    "packages/writer",
    "packages/serve"
  ],
  "devDependencies": {
    "@backlogmd/parser": "*",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0"
  },
  "engines": {
    "node": ">=22"
  }
}
