{
  "name": "backlogmd-parser",
  "private": true,
  "version": "0.1.0",
  "description": "CLI for BacklogMD parser",
  "type": "module",
  "bin": {
    "backlogmd-parser": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build -w @backlogmd/types && npm run build -w @backlogmd/parser && tsc",
    "cli": "npm run build && node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "build:all": "npm run build -w @backlogmd/types && npm run build -w @backlogmd/parser && npm run build -w @backlogmd/writer && npm run build -w @backlogmd/vcs && npm run build -w @backlogmd/workers && npm run build -w @backlogmd/serve",
    "serve": "npm run build:all && node packages/serve/dist/cli.js",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build:all && changeset publish"
  },
  "workspaces": [
    "packages/types",
    "packages/parser",
    "packages/writer",
    "packages/serve",
    "packages/core",
    "packages/vcs",
    "packages/workers"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@backlogmd/parser": "*",
    "@backlogmd/serve": "*",
    "@backlogmd/writer": "*",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0"
  },
  "engines": {
    "node": ">=22"
  }
}